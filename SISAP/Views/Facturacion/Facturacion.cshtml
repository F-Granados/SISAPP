@{
    ViewBag.Title = "Facturacion";
}

<div class="card border-0 ml-4 mt-4 margin-l mb-3 ">
    <div class="card-body fuente">
        <div class=" card-header bg-dark text-white">
            <h5><i class="fas fa-table"> Facturas</i></h5>
        </div>

        <hr style="border-style: dashed;" />
        <div class="row">
            <div class="row  col-6">
                <div class="col-sm-3 mb-3">
                    <label>Año</label>
                    <select id="ddannio" class="form-control form-control-sm">

                        <option>2020</option>
                        <option>2021</option>
                    </select>
                </div>
                <div class="col-sm-4 mb-3 ">
                    <label>Mes</label>
                    <select class="form-control form-control-sm">
                        <option>ENERO</option>
                        <option>FEBRERO</option>
                    </select>
                </div>
                <div class="col-sm-4 mb-3 ">
                    <label>Ruta</label>
                    <select class="form-control form-control-sm">
                        <option>110</option>
                        <option>115</option>
                    </select>
                </div>

               
            </div>


            <div class="col-6">
                <div class="d-flex justify-content-end mb-2">
                    <div class="searchbar mr-4 mt-2">
                        <input class="search_input" type="text" id="txtFilter2" name="" placeholder="Buscar...">
                        <a href="#" class="search_icon"><i class="fas fa-search"></i></a>
                    </div>
                </div>

            </div>



        </div>

        <table class="table table-sm table-striped table-responsive-sm">
            <thead>
                <tr class="bg-info text-light ">
                    <th scope="col">#</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Dirección</th>
                    <th scope="col">Medidor</th>
                    <th scope="col">Consumo</th>
                    <th scope="col">Sub Total</th>
                    <th scope="col">Total Factura</th>
                    <th scope="col">Observaciones</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>QUISPE YUPANQUI NANDITO</td>
                    <td>URB. MARAVILLA</td>

                    <td>EAS-25641</td>
                    <td>4</td>
                    <td>50.6</td>
                    <td>50.6</td>
                    <td>Medidor</td>
                    <td style="width:80px">
                        <div class="btn-group" role="group">
                            <div class="d-flex justify-content-start mb-2">
                                <button type="button" data-toggle="modal" data-target="#agregarCategoria" class="btn btn-info text-white"><i class="fas fa-edit"></i></button>
                            </div>
                            <div class="d-flex justify-content-start mb-2">
                                <button type="button" data-toggle="modal" data-target="#" class="btn btn-success text-white"><i class="fas fa-list-alt"></i></button>
                            </div>
                            <div class="d-flex justify-content-start mb-2">
                                <button type="button" data-toggle="modal" data-target="#" class="btn btn-danger text-white"><i class="fas fa-trash-alt"></i></button>
                            </div>

                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
        <div class="modal-footer p-1">
            <button class="btn btn-success btn-sm" id="enviar" type="submit"><i class="fas fa-file-excel"></i> Excel</button>
            <button class="btn btn-dark btn-sm" id="enviar" type="submit"><i class="fas fa-print"></i> Print</button>
        </div>
    </div>
</div>
