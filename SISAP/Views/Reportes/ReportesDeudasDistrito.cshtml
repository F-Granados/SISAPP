    ViewBag.Title = "Reportes";
}


<div class="card border-0 ml-4 mt-4 margin-l mb-3 ">
    <div class="card-body fuente">
        <div class=" card-header bg-dark text-white">
            <h5><i class="fas fa-table"> Reporte de deudas por año</i></h5>
        </div>
